---
import MainLayout from '../layouts/main-layout.astro';
import StructuredData from '../components/structured-data.astro';
import PageBanner from '../components/page-banner.astro';
import ImageGrid from "../components/image-grid.astro";

// Gallery images data for better maintainability
const realizationImages = [
  {
    src: "/imgs/bociany-krawieckie-na-stole.webp",
    alt: "Bociany krawieckie na stole"
  },
  {
    src: "/imgs/bociany-krawieckie.webp",
    alt: "Bociany krawieckie"
  },
  {
    src: "/imgs/czesci-do-tapicerki-meblowej.webp",
    alt: "Części do tapicerki meblowej"
  },
  {
    src: "/imgs/dwa-bociany-krawieckie-do-ciecia-pianki.webp",
    alt: "Dwa bociany krawieckie do cięcia pianki"
  },
  {
    src: "/imgs/gotowe-uszyte-komplety.webp",
    alt: "Gotowe uszyte komplety"
  },
  {
    src: "/imgs/hala-krawiecka.webp",
    alt: "Hala krawiecka"
  },
  {
    src: "/imgs/hala-pracownicza-wusp.webp",
    alt: "Hala pracownicza WUSP"
  }
];
---

<MainLayout 
  title="Realizacje - Wytwórczo Usługowa Spółdzielnia Pracy Jarocin" 
  description="Galeria realizacji WUSP Jarocin - przykłady wykonanej tapicerki meblowej, pokrowców i wyrobów tekstylnych."
>
  <!-- Structured Data -->
  <StructuredData 
    pageType="realizations"
  />

  <PageBanner 
    title="Realizacje / Galeria" 
    breadcrumbText="Realizacje"
  />

  <!-- Gallery Section -->
  <section class="px-4 lg:px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] max-w-[1400px] pb-[100px]">
    <ImageGrid
      columns={3}
      images={realizationImages}
    />
  </section>
</MainLayout>