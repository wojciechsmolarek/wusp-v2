---
import MainLayout from '../layouts/main-layout.astro';
import Button from '../components/button.tsx';
import ArrowSec from '../icons/arrow-sec.tsx';
import CallIcon from "../icons/call.tsx";
import Experience from '../components/experience.tsx';
import { Picture } from "astro:assets";

// Dane przeniesione do zmiennych dla lepszej organizacji
const services = [
  {
    title: 'Szycie tapicerki na zamówienie',
    text: 'Szyjemy tapicerkę meblową na łóżka, kanapy, fotele, pufy i inne meble według specyfikacji klienta.'
  },
  {
    title: 'Współpraca B2B',
    text: 'Obsługujemy producentów mebli i firmy stolarskie, zapewniając terminowość, jakość i elastyczność.'
  },
  {
    title: 'Nowoczesny park maszynowy',
    text: 'Dysponujemy zaawansowanym zapleczem technologicznym, co gwarantuje powtarzalność i wysoką jakość wykonania.'
  },
];

const reviews = [
  {
    img: '/natasha.png',
    name: 'Nattasha Mith',
    location: 'Sydney, USA',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
  {
    img: '/benny.png',
    name: 'Benny Roll',
    location: 'Sydney, New York',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
  {
    img: '/raymond.png',
    name: 'Raymond Galario',
    location: 'Sydney, Australia',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
];

const projects = [
  {
    img: '/project1.png',
    name: 'Tapicerka do łóżek',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/project2.png',
    name: 'Zestawy wypoczynkowe',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/project3.png',
    name: 'Kanapy modułowe',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/project4.png',
    name: 'Fotele i pufy',
    text: 'Meble / Tapicerka meblowa'
  },
];

const clientLogos = [
  {
    img: '/clientLogo1.svg',
    name: 'brand_name',
  },
  {
    img: '/clientLogo2.svg',
    name: 'brand_name',
  },
  {
    img: '/clientLogo3.svg',
    name: 'brand_name',
  },
  {
    img: '/clientLogo4.svg',
    name: 'brand_name',
  },
  {
    img: '/clientLogo5.svg',
    name: 'brand_name',
  },
];

const experiences = [
  {
    num: 69,
    text:'Lat na rynku'
  },
  {
    num: 50,
    text:'Zatrudnionych osób'
  },
  {
    num: 15,
    text:'Partnerów biznesowych'
  },
  {
    num: 25,
    text:'Typów tapicerowanych mebli'
  },
];
---

<MainLayout 
  title="Wytwórczo Usługowa Spółdzielnia Pracy Jarocin - szwalnia tapicerki meblowej"
  description="Szwalnia tapicerki meblowej. Narożniki, zestawy mebli, sofy, kanapy. Gwarancja wykonanania. Zapraszamy do współpracy."
>
  <!-- Banner - zoptymalizowany pod kątem wydajności -->
  <section 
    class="relative w-full bg-no-repeat bg-cover lg:min-h-[70vh] px-12 xl:px-0 flex items-center"
    aria-label="Baner główny"
  >
    <Picture
      formats={['avif', 'webp']}
      src="/imgs/banner-homepage.webp"
      alt="Twój partner w szyciu tapicerki meblowej"
      width="1374"
      height="1002"
      loading="eager"
      fetchpriority="high"
      class="w-full h-full absolute top-[0] left-[0] object-cover"
    />
    <div class="relative lg:max-w-[1200px] w-full my-[9em] md:my-[10em] lg:mx-auto flex flex-col">
      <h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[70px] pb-4 font-dm md:leading-[80px] w-full xl:max-w-[50%] text-primary-200">
        Twój partner w szyciu tapicerki meblowej
      </h1>
      <p class="text-base md:text-[22px] pb-5 text-text-gray-200 w-full lg:max-w-[50%]">
        Zaufaj doświadczeniu i precyzji – realizujemy zlecenia tapicerskie dla producentów mebli, firm stolarskich i projektantów wnętrz.
      </p>
      <Button text="Zapytaj o ofertę" href="/kontakt" />
    </div>
  </section>

  <!-- Services Section - zoptymalizowana -->
  <section 
    class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between"
    aria-labelledby="services-heading"
  >
    <h2 id="services-heading" class="sr-only">Nasze usługi</h2>
    {services.map((service) => (
      <div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
        <h3 class="text-center text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
        <p class="text-base md:text-[22px] tracking-tight text-text-gray leading-[33px] text-center">{service.text}</p>
        <a 
          href="/oferta" 
          class="text-text-gray-200 leading-snug text-lg tracking-tight font-semibold gap-2 py-4 md:py-8 startCenter group relative inline-flex items-center"
          aria-label={`Dowiedz się więcej o ${service.title}`}
        >
          <span>Dowiedz się więcej</span>
          <span class="transition-transform duration-300 group-hover:translate-x-1">
            <ArrowSec />
          </span>
          <span class="absolute bottom-0 left-0 w-full h-0.5 bg-text-gray-200 transform scale-x-0 
                     transition-transform duration-300 ease-out origin-left group-hover:scale-x-100"></span>
        </a>
      </div>
    ))}
  </section>

  <!-- About Section - zoptymalizowana -->
  <section 
    class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[200px]"
    aria-labelledby="about-heading"
  >
    <div class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6">
      <h2 
        id="about-heading"
        class="text-[30px] text-center lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
      >
        Tworzymy tapicerkę, która buduje wartość Twoich produktów
      </h2>
      <p class="text-base md:text-[22px] text-center lg:text-left tracking-tight text-text-gray leading-[33px]">
        Od ponad 35 lat wspieramy firmy z branży meblarskiej jako solidny podwykonawca tapicerki. Łączymy tradycję rzemiosła z nowoczesną technologią, oferując kompleksową obsługę – od prototypu po produkcję seryjną.
      </p>
      <div class="flex gap-4 pt-3 items-center">
        <CallIcon />
        <div class="flex flex-col text-text-gray-200 tracking-tight">
          <a 
            href="tel:+48607442592" 
            class="text-2xl font-bold leading-9 hover:text-primary-200 transition-colors duration-300 relative group"
            aria-label="Zadzwoń pod numer +48 607 442 592"
          >
            <span>+48 607 442 592</span>
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary-200 transform scale-x-0 
                       transition-transform duration-300 ease-out origin-left group-hover:scale-x-100"></span>
          </a>
          <span class="text-[20px] leading-8">Zadzwoń i dowiedz się więcej!</span>
        </div>
      </div>
      <Button text="Uzyskaj wycenę" href="/kontakt" />
    </div>

    <div class="overflow-hidden rounded-lg">
      <Picture 
        formats={['avif', 'webp']}
        src="/about-img.png"
        alt="Wnętrze domu z tapicerką meblową"
        width="653"
        height="700"
        class="w-full h-auto hover:scale-105 transition-transform duration-700"
        loading="lazy"
      />
    </div>
  </section>

  <!-- Reviews Section - zoptymalizowana -->
  <section 
    class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
    aria-labelledby="reviews-heading"
  >
    <div class="w-full flex flex-col bg-primary-300 rounded-[48px] px-6 py-[88px]">
      <h2 
        id="reviews-heading"
        class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-9 mx-auto"
      >
        Opinie naszych partnerów
      </h2>
      <div class="flex flex-col gap-8 lg:gap-10 lg:flex-row justify-between">
        {reviews.map((rev) => (
          <div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6 shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex flex-col sm:flex-row gap-6 items-center">
              <img 
                src={rev.img} 
                alt={`Zdjęcie ${rev.name}`} 
                width="50" 
                height="50" 
                loading="lazy" 
              />
              <div class="flex flex-col tracking-tight leading-9">
                <span class="text-primary-200 text-lg lg:text-[25px] font-dm">{rev.name}</span>
                <span class="text-text-gray-200 text-base lg:text-lg">{rev.location}</span>
              </div>
            </div>
            <p class="font-jost tracking-tight leading-8 text-base text-center sm:text-left text-text-gray lg:text-[21px]">{rev.review}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Client Logo Section - zoptymalizowana z lazy loading -->
  <section 
    class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
    aria-label="Nasi klienci"
  >
    <div class="w-full grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center justify-items-center">
      {clientLogos.map(logo => (
        <img 
          src={logo.img} 
          alt={`Logo ${logo.name}`} 
          class="max-w-[120px] grayscale hover:grayscale-0 transition-all duration-300"
          loading="lazy"
          width="120"
          height="60"
        />
      ))}
    </div>
  </section>

  <!-- Projects Section - zoptymalizowana -->
  <section 
    class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]"
    aria-labelledby="projects-heading"
  >
    <h2 
      id="projects-heading"
      class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-2 mx-auto"
    >
      Nasze realizacje
    </h2>
    <p class="text-base md:text-[22px] text-center tracking-tight text-text-gray leading-[33px] lg:max-w-[60%] mx-auto">
      Poznaj wybrane projekty, które zrealizowaliśmy dla producentów mebli i firm stolarskich. Prezentujemy przykłady tapicerki wykonanej na zamówienie – od łóżek i kanap, przez fotele, po pufy i zestawy wypoczynkowe. Jeśli szukasz solidnego partnera w zakresie szycia tapicerki meblowej, zobacz, jak możemy wesprzeć Twój biznes.
    </p>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-[104px] lg:gap-y-[56px] mt-12 lg:mt-[93px]">
      {projects.map((proj) => (
        <div class="w-full flex flex-col gap-4 group">
          <div class="overflow-hidden rounded-lg">
            <img 
              src={proj.img} 
              alt={proj.name} 
              class="w-full h-auto transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
              width="500"
              height="350"
            />
          </div>
          <div class="flex flex-col tracking-tight leading-9">
            <h3 class="text-primary-200 text-lg lg:text-[25px] font-dm">{proj.name}</h3>
            <p class="text-text-gray-200 text-base lg:text-lg">{proj.text}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <Button text="Zobacz więcej realizacji" href="/realizacje" />
    </div>
  </section>

  <!-- Experience Section - zoptymalizowana -->
  <section 
    class="w-full bg-primary-300 px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[200px] py-[151px]"
    aria-label="Nasze doświadczenie"
  >
    <div class="w-full max-w-[1200px] mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {experiences.map((exp, i) => (
        <Experience text={exp.text} num={exp.num} i={i} client:visible />
      ))}
    </div>
  </section>

  <!-- CTA Section - nowa sekcja -->
  <section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[150px] pb-[50px]">
    <div class="w-full bg-text-blue rounded-[48px] px-6 py-[88px] text-center">
      <h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] text-white pb-6">
        Rozpocznij współpracę już dziś
      </h2>
      <p class="text-base md:text-[22px] text-center tracking-tight text-white leading-[33px] lg:max-w-[60%] mx-auto mb-10">
        Skontaktuj się z nami, aby omówić szczegóły Twojego projektu. Oferujemy indywidualne podejście i konkurencyjne ceny.
      </p>
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <Button text="Skontaktuj się z nami" href="/kontakt" variant="light" />
        <Button text="Poznaj naszą ofertę" href="/oferta" variant="outline" />
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
</style>