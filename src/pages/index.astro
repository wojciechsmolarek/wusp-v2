---
import MainLayout from '../layouts/main-layout.astro';
import StructuredData from '../components/structured-data.astro';
import Button from '../components/button.tsx';
import ArrowSec from '../icons/arrow-sec.tsx';
import CallIcon from "../icons/call.tsx";
import Experience from '../components/experience.tsx';
import { Picture, Image } from "astro:assets";

// Move data to separate files for better maintainability
const services = [
  {
    title: 'Szycie tapicerki na zamówienie',
    text: 'Szyjemy tapicerkę meblową na łóżka, kanapy, fotele, pufy i inne meble według specyfikacji klienta.',
    url: '/oferta'
  },
  {
    title: 'Nowoczesny park maszynowy',
    text: 'Dysponujemy zaawansowanym zapleczem technologicznym, co gwarantuje powtarzalność i wysoką jakość wykonania.',
    url: '/park-maszynowy'
  },
  {
    title: 'Sprzedaż mebli online',
    text: 'Oferujemy sprzedaż mebli tapicerowanych, uszytych w 100% przez naszą firmę.',
    url: 'https://meblejarocin.com/'
  },  
];

const reviews = [
  {
    img: '/natasha.png',
    name: 'Nattasha Mith',
    location: 'Sydney, USA',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
  {
    img: '/benny.png',
    name: 'Benny Roll',
    location: 'Sydney, New York',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
  {
    img: '/raymond.png',
    name: 'Raymond Galario',
    location: 'Sydney, Australia',
    review: 'Lorem Ipsum is simply dummy text of the typesetting industry. Ipsum has been.'
  },
];

const projects = [
  {
    img: '/imgs/Realizacja-WUSP-2025-02-27-13-06-03 3.webp',
    name: 'Tapicerka do łóżek',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/imgs/Realizacja-WUSP-2025-02-27-13-06-02.webp',
    name: 'Zestawy wypoczynkowe',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/imgs/kanapa-modulowa.webp',
    name: 'Kanapy modułowe',
    text: 'Meble / Tapicerka meblowa'
  },
  {
    img: '/imgs/poduszki-recznie-szyte-w-polsce.webp',
    name: 'Poduszki',
    text: 'Meble / Akcesoria'
  },
  {
    img: '/imgs/legowiska-dla-zwierzat.webp',
    name: 'Legowiska dla zwierząt',
    text: 'Meble / Legowiska'
  },
];

const clientLogos = [
  { img: '/logo-benix.svg', name: 'BENIX' },
  { img: '/logo-mirjan.svg', name: 'Mirjan24' },
  { img: '/logo-pylon.svg', name: 'Pylon' },
];

const experiences = [
  { num: 69, text:'Lat na rynku' },
  { num: 50, text:'Zatrudnionych osób' },
  { num: 15, text:'Partnerów biznesowych' },
  { num: 25, text:'Typów tapicerowanych mebli' },
];

// Common CSS classes for reusability
const containerClasses = "lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto";
const sectionSpacing = "pt-[100px] lg:pt-[200px]";
const headingClasses = "font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px]";
const textClasses = "text-base md:text-[22px] text-center tracking-tight text-text-gray leading-[33px]";
---

<MainLayout 
  title="Wytwórczo Usługowa Spółdzielnia Pracy Jarocin - szwalnia tapicerki meblowej"
  description="Szwalnia tapicerki meblowej. Narożniki, zestawy mebli, sofy, kanapy. Gwarancja wykonanania. Zapraszamy do współpracy."
>

  <!-- Structured Data -->
  <StructuredData 
  pageType="home"
  />

 <!-- Hero Banner -->
  <section 
  class="relative w-full bg-no-repeat bg-cover lg:min-h-[70vh] px-12 xl:px-0 flex items-center"
  aria-label="Baner główny"
  >
    <img
      srcset="/imgs/banner-homepage-400w.webp 400w, /imgs/banner-homepage-600w.webp 600w, /imgs/banner-homepage-800w.webp 800w, /imgs/banner-homepage-1000w.webp 1000w, /imgs/banner-homepage-1200w.webp 1200w, /imgs/banner-homepage-1600w.webp 1600w, /imgs/banner-homepage.webp 2000w"
      sizes="(max-width: 400px) 400px, (max-width: 600px) 600px, (max-width: 800px) 800px, (max-width: 1000px) 1000px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (min-width: 1601px) 2000px"
      src="/imgs/banner-homepage.webp"
      alt="Banner główny strony WUSP, przedstawiający narzędzia krawcowej"
      width="2333"
      height="1159"
      loading="eager"
      fetchpriority="high"
      decoding="async"
      class="absolute inset-0 w-full h-full object-cover object-bottom"
    />

    <div class="relative lg:max-w-[1200px] w-full my-36 md:my-40 lg:mx-auto">
      <div class="max-w-2xl">
        <h1 class="text-4xl leading-tight md:text-6xl xl:text-7xl pb-4 font-dm md:leading-tight text-primary-200">
          Twój partner w szyciu tapicerki meblowej
        </h1>
        <p class="text-base md:text-xl pb-5 text-text-gray-200 max-w-prose">
          Zaufaj doświadczeniu i precyzji – realizujemy zlecenia tapicerskie dla producentów mebli, firm stolarskich i projektantów wnętrz.
        </p>
        <Button text="Zapytaj o ofertę" href="/kontakt" />
      </div>
    </div>
  </section>


  <!-- Services Section -->
  <section 
    class={`${containerClasses} ${sectionSpacing} flex flex-col gap-8 lg:gap-10 lg:flex-row justify-between`}
    aria-labelledby="services-heading"
  >
    {services.map((service) => (
      <article class="group relative w-full max-w-sm mx-auto p-6 rounded-lg transition-transform duration-300 hover:scale-105">
        <a 
          href={service.url} 
          class="absolute inset-0 z-10"
          aria-label={`Dowiedz się więcej o ${service.title}`}
        />
        
        <h3 class="text-center text-text-blue font-dm text-xl md:text-2xl leading-relaxed mb-3">
          {service.title}
        </h3>
        
        <p class="text-base md:text-xl tracking-tight text-text-gray leading-relaxed text-center mb-4">
          {service.text}
        </p>
        
        <div class="flex items-center justify-center gap-2 text-text-gray-200 text-lg font-semibold">
          <span>Dowiedz się więcej</span>
          <span class="transition-transform duration-300 group-hover:translate-x-1">
            <ArrowSec />
          </span>
        </div>
      </article>
    ))}
  </section>

  <!-- About Section -->
  <section 
    class={`${containerClasses} ${sectionSpacing} flex flex-col-reverse lg:grid lg:grid-cols-2 gap-16 items-center`}
    aria-labelledby="about-heading"
  >
    <div class="flex flex-col gap-8 max-w-lg items-center lg:items-start">
      <h2 id="about-heading" class={`${headingClasses} text-left text-text-blue`}>
        Tworzymy tapicerkę, która buduje wartość Twoich produktów
      </h2>
      
      <p class={`${textClasses} text-left`}>
        Od 1956 roku, jako solidny podwykonawca, wspieramy firmy z branży krawcowo-odzieżowej oraz tapicerskiej. Łączymy tradycję rzemiosła z nowoczesną technologią, oferując kompleksową obsługę – od prototypu po produkcję seryjną.
      </p>
      
      <div class="flex gap-4 items-center">
        <CallIcon />
        <div class="flex flex-col text-text-gray-200">
          <a 
            href="tel:+48607442592" 
            class="text-2xl font-bold leading-9 hover:text-primary-200 transition-colors duration-300 group"
            aria-label="Zadzwoń pod numer +48 607 442 592"
          >
            <span>+48 607 442 592</span>
            <span class="block h-0.5 bg-primary-200 transform scale-x-0 transition-transform duration-300 group-hover:scale-x-100"></span>
          </a>
          <span class="text-lg">Zadzwoń i dowiedz się więcej!</span>
        </div>
      </div>
      
      <Button text="Uzyskaj wycenę" href="/kontakt" />
    </div>

    <div class="overflow-hidden rounded-lg">
      <Picture 
        formats={['avif', 'webp']}
        src="/imgs/magazyn-z-materialami.webp"
        alt="Wnętrze domu z tapicerką meblową"
        width={653}
        height={700}
        class="w-full h-auto hover:scale-105 transition-transform duration-700 rounded-[3%_25%_3%_25%/3%_25%_3%_25%]"
        loading="lazy"
      />
    </div>
  </section>

  <!-- Reviews Section -->
  <section class={`${containerClasses} ${sectionSpacing}`} aria-labelledby="reviews-heading">
    <div class="w-full bg-primary-300 rounded-[48px] px-6 py-20">
      <h2 id="reviews-heading" class={`${headingClasses} max-w-2xl pb-9 mx-auto`}>
        Opinie naszych partnerów
      </h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">
        {reviews.map((review) => (
          <article class="bg-white max-w-sm px-9 py-12 rounded-3xl mx-auto shadow-sm hover:shadow-md transition-shadow duration-300">
            <div class="flex flex-col sm:flex-row gap-6 items-center mb-6">
              <Picture 
                src={review.img} 
                alt={`Zdjęcie ${review.name}`} 
                loading="lazy" 
                width={50} 
                height={50}
                class="rounded-full"
              />
              <div class="text-center sm:text-left">
                <h3 class="text-primary-200 text-lg lg:text-xl font-dm">{review.name}</h3>
                <p class="text-text-gray-200">{review.location}</p>
              </div>
            </div>
            <p class="font-jost text-text-gray text-center sm:text-left">{review.review}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Client Logos -->
  <section class={`${containerClasses} ${sectionSpacing}`} aria-label="Nasi klienci">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center justify-items-center">
      {clientLogos.map(logo => (
        <Image 
          src={logo.img} 
          alt={`Logo ${logo.name}`} 
          class="max-w-40 grayscale hover:grayscale-0 transition-all duration-300"
          loading="lazy"
          width={160}
          height={80}
        />
      ))}
    </div>
  </section>

  <!-- Projects Section -->
  <section class={`${containerClasses} ${sectionSpacing}`} aria-labelledby="projects-heading">
    <header class="text-center mb-12 lg:mb-20">
      <h2 id="projects-heading" class={`${headingClasses} max-w-2xl pb-2 mx-auto`}>
        Nasze realizacje
      </h2>
      <p class={`${textClasses} max-w-4xl mx-auto`}>
        Poznaj wybrane projekty, które zrealizowaliśmy dla producentów mebli i firm stolarskich. Prezentujemy przykłady tapicerki wykonanej na zamówienie – od łóżek i kanap, przez fotele, po pufy i zestawy wypoczynkowe.
      </p>
    </header>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-x-24 lg:gap-y-14">
      {projects.map((project) => (
        <article class="group">
          <div class="overflow-hidden rounded-lg mb-4">
            <img 
              src={project.img} 
              alt={project.name} 
              class="w-full h-auto transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
              width={500}
              height={350}
            />
          </div>
          <div>
            <h3 class="text-primary-200 text-lg lg:text-xl font-dm">{project.name}</h3>
            <span class="text-text-gray-200">{project.text}</span>
          </div>
        </article>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <Button text="Zobacz więcej realizacji" href="/realizacje" />
    </div>
  </section>

  <!-- Experience Section -->
  <section 
    class="w-full bg-primary-300 px-12 xl:px-0 mx-auto mt-24 lg:mt-48 py-32"
    aria-label="Nasze doświadczenie"
  >
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {experiences.map((exp, i) => (
        <Experience text={exp.text} num={exp.num} i={i} client:visible />
      ))}
    </div>
  </section>

  <!-- Company Description -->
  <section class={`${containerClasses} pt-16 lg:pt-24`} aria-labelledby="company-description">
    <header class="text-center mb-8">
      <h2 class={`${headingClasses} max-w-2xl pb-5 mx-auto`}>
        Szwalnia usługowa i spółdzielnia produkcyjna – Jarocin
      </h2>
    </header>
    
    <div class="max-w-4xl mx-auto space-y-6">
      <p class={textClasses}>
        Wytwórczo Usługowa Spółdzielnia Pracy Jarocin to doświadczona <strong>szwalnia usługowa</strong>, która od lat realizuje zamówienia dla firm z całej Polski. Naszymi głównymi klientami są producenci mebli, łóżek, sof, a także firmy z branży akustycznej, dla których wykonujemy pokrowce na głośniki oraz elementy tapicerskie.
      </p>
      
      <p class={textClasses}>
        Nasza spółdzielnia z Jarocina dysponuje <a href="/park-maszynowy" class="underline hover:no-underline">nowoczesnym parkiem maszynowym</a> i doświadczonym zespołem specjalistów, co pozwala nam realizować nawet najbardziej wymagające projekty w dużych wolumenach.
      </p>
      
      <p class={textClasses}>
        Wytwórczo Usługowa Spółdzielnia Pracy Jarocin to sprawdzony wybór dla biznesu – realizujemy zamówienia seryjne, prototypy oraz nietypowe projekty, zawsze z dbałością o najwyższą jakość i terminowość.
      </p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class={`${containerClasses} pt-24 lg:pt-32 pb-12`}>
    <div class="w-full bg-text-blue rounded-[48px] px-6 py-20 text-center">
      <h2 class={`${headingClasses} text-white pb-6`}>
        Rozpocznij współpracę już dziś
      </h2>
      
      <p class="text-base md:text-xl text-center text-white leading-relaxed max-w-3xl mx-auto mb-10">
        Skontaktuj się z nami, aby omówić szczegóły Twojego projektu. Oferujemy indywidualne podejście i konkurencyjne ceny.
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <Button text="Skontaktuj się z nami" href="/kontakt" variant="light" />
        <Button text="Poznaj naszą ofertę" href="/oferta" variant="outline" />
      </div>
    </div>
  </section>
</MainLayout>