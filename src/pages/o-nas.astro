---
import MainLayout from '../layouts/main-layout.astro';
import StructuredData from '../components/structured-data.astro';
import PageBanner from '../components/page-banner.astro';

import QuoteText from '../components/quote.tsx';
import Facebook from '../icons/facebook.tsx';
import Twitter from '../icons/twitter.tsx';
import LinkedIn from '../icons/linkedin.tsx';
import Instagram from '../icons/instagram.tsx';
import { Image } from "astro:assets";

// Common CSS classes for reusability
const containerClasses = "w-full px-12 lg:px-0 mx-auto lg:max-w-[1200px]";
const sectionSpacing = "pt-[100px] lg:pt-[150px]";
const headingClasses = "text-[30px] text-center lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue";
const textClasses = "text-base md:text-[22px] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]";

// Content sections data for better maintainability
const contentSections = [
  {
    title: "Czym się zajmujemy?",
    text: "Specjalizujemy się w szyciu pokrowców, tapicerki i wyrobów tekstylnych dla producentów mebli i branży akustycznej. Realizujemy zamówienia seryjne oraz nietypowe projekty dla firm z całej Polski.",
    image: {
      src: "/imgs/walki-materialu.webp",
      alt: "Wałki materiału do szycia pokrowców",
      width: 659,
      height: 377
    },
    layout: "normal",
    gap: "gap-10",
    textMaxWidth: "lg:max-w-[85%]"
  },
  {
    title: "Efekt końcowy",
    text: "Dostarczamy wyroby tekstylne i tapicerskie, które spełniają najwyższe standardy jakości, terminowości i precyzji wykonania – zawsze zgodnie z oczekiwaniami naszych klientów biznesowych.",
    image: {
      src: "/imgs/uszyte-siedzisko.webp",
      alt: "Uszyte siedzisko - gotowy produkt",
      width: 659,
      height: 377
    },
    layout: "reverse",
    gap: "gap-24",
    textMaxWidth: "lg:max-w-[95%]"
  },
  {
    title: "Firma z licznymi wyróżnieniami",
    text: 'Możemy pochwalić się prestiżowymi certyfikatami „Firma Godna Zaufania". Certyfikaty te przyznawane są przedsiębiorstwom, które wyróżniają się rzetelnością, wysoką jakością usług oraz pozytywną opinią wśród klientów i partnerów biznesowych.',
    image: {
      src: "/imgs/certyfikaty-wusp-jarocin.webp",
      alt: "Certyfikaty i dyplomy WUSP Jarocin",
      width: 659,
      height: 377
    },
    layout: "normal",
    gap: "gap-10",
    textMaxWidth: "lg:max-w-[85%]"
  }
];

// Social media links data
const socialLinks = [
  { component: Facebook, href: "/", label: "Facebook" },
  { component: Twitter, href: "/", label: "Twitter" },
  { component: LinkedIn, href: "/", label: "LinkedIn" },
  { component: Instagram, href: "/", label: "Instagram" }
];

// Team member data
const teamMember = {
  name: "Nattasha Julie",
  position: "Design, Australia",
  phone: "+1 (378) 400-1234",
  email: "julie@email.com"
};

// Team images data
const teamImages = [
  { src: "/person1.png", alt: "Członek zespołu 1" },
  { src: "/person2.png", alt: "Członek zespołu 2" },
  { src: "/person3.png", alt: "Członek zespołu 3" }
];
---

<MainLayout 
  title="O nas" 
  description="Sprawdź, co nas wyróżnia i dlaczego warto nam zaufać. Nasze doświadczenie to gwarancja jakości każdego zamówienia."
>

  <!-- Structured Data -->
  <StructuredData 
    pageType="about"
  />

  <!-- Banner Section -->
  <PageBanner 
    title="O nas" 
    breadcrumbText="O nas"
  />

  <!-- Quote Section -->
  <section 
    class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center"
    aria-label="Cytat firmowy"
  >
    <QuoteText 
      text="Nasze doświadczenie to gwarancja jakości każdego zamówienia." 
      name="WUSP Jarocin"
      client:load
    />
  </section>

  <!-- Content Sections -->
  {contentSections.map((section, index) => (
    <section 
      class={`${containerClasses} ${sectionSpacing}`}
      aria-labelledby={`section-${index}-title`}
    >
      <div class={`w-full flex flex-col-reverse ${section.layout === 'reverse' ? 'lg:flex-row-reverse' : 'lg:flex-row'} justify-between ${section.gap} items-center`}>
        <div class="flex flex-col gap-6">
          <h2 
            id={`section-${index}-title`}
            class={headingClasses}
          >
            {section.title}
          </h2>
          <p class={`${textClasses} ${section.textMaxWidth}`}>
            {section.text}
          </p>
        </div>
        
        <div class="overflow-hidden">
          <Image 
            src={section.image.src}
            alt={section.image.alt}
            width={section.image.width}
            height={section.image.height}
            class="w-full h-auto hover:scale-105 transition-transform duration-700 rounded-2xl"
            loading="lazy"
          />
        </div>
      </div>
    </section>
  ))}

